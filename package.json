{
  "name": "react-native-platform",
  "description": "Platform tools for React Native.",
  "version": "0.7.0",
  "keywords": [
    "react-native",
    "android",
    "ios",
    "platform",
    "tools",
    "utils"
  ],
  "nativePackage": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/listenzz/react-native-platform.git"
  },
  "homepage": "https://github.com/listenzz/react-native-platform",
  "author": "listen <listenzz@163.com>",
  "license": "MIT",
  "licenseFilename": "LICENSE",
  "main": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "scripts": {
    "build": "rm -rf ./lib && tsc",
    "prestart": "npm run build",
    "prepare": "npm run build",
    "tsc": "tsc",
    "start": "react-native start",
    "run:ios": "react-native run-ios --project-path ./example/ios",
    "start:android": "adb shell am start -n com.reactnative.platform.example/.MainActivity",
    "run:android": "cd example/android && ./gradlew installDebug && npm run start:android",
    "test": "jest"
  },
  "peerDependencies": {
    "react": "^16.8.1",
    "react-native": ">=0.60.4"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/runtime": "^7.4.3",
    "@react-native-community/eslint-config": "0.0.5",
    "@types/jest": "^24.0.11",
    "@types/react": "^16.8.14",
    "@types/react-native": "^0.60.21",
    "@types/react-test-renderer": "16.9.0",
    "babel-jest": "^24.9.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^6.5.0",
    "jest": "^24.9.0",
    "metro-react-native-babel-preset": "^0.56.0",
    "react": "16.9.0",
    "react-native": "^0.61.3",
    "react-native-navigation-hybrid": "^0.18.0",
    "react-test-renderer": "16.9.0",
    "typescript": "3.5.3"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
